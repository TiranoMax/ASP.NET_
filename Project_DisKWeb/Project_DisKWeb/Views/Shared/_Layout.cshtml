<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  DisKWEb - O Site dos Discos</title>

    @*Inicio de links bootstrap*@
    <link href="~/Content/material-dashboard.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    @*fim links bootstrap*@

    @*java script*@
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    
</head>
<body class="dark-edition">
    <nav class="navbar navbar-expand-lg navbar-transparent fixed-top navbar-light bg-info" style="border-bottom: solid;border-bottom-color: blueviolet">
        <div class="container">
            <div class="navbar-translate ">
                @Html.ActionLink("DisKWeb", "Index", "Produto", null, new { @class = "nav-link" })
            </div>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item active ">
                        @Html.ActionLink("Home", "Index", "Produto", null, new { @class = " nav-link" })
                    </li>
                </ul>

                <form class="form-inline ml-auto">
                    <div class="form-group has-white">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-white btn-raised btn-fab btn-fab-mini btn-round">
                        <i class="material-icons">search</i>
                    </button>
                </form>
                
                <i class="material-icons">
                    @Html.ActionLink("shopping_basket", "Index", "Produto", null, new { @class = "nav-link " })
                </i>

                <i class="material-icons">
                    @Html.ActionLink("personal", "Index", "Produto", null, new { @class = "nav-link" })
                </i>
            </div>
        </div>
    </nav>


    <div class="card-body " style="padding-top: 5%">
        <br />
        <br />

        @RenderBody()
        <hr />

    </div>

    <footer class="footer">
        <div class="container-fluid">
            <p>&copy; @DateTime.Now.Year - Desenvolvido por Arents TI</p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>