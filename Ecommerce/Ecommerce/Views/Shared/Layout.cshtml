@using Ecommerce.DAL
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Ecommerce - Jones", "Index", "Produto", null, new { @class = "navbar-brand" })

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @* link padrao mvc | Razor |=  *@
                    @Html.ActionLink("Cadastrar Produto", "CadastrarProduto", "Produto", null, new { @class = "nav-link" })
                    @* order do link mvc| Nome do link | Nome do arquivo pagina| referenciamento controller *@
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Categorias Cadastradas", "ListarCategoria", "Categoria", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Produtos", "Exibicao", "Exibicao", null, new { @class = "nav-link" })
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" placeholder="Search" type="text">@* vai sair pois seram modificado para padrao asp*@
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a href="~/Exibicao/CarrinhoCompras" class="btn btn-secondary my-2 my-sm-0 ">

                        @if (ItemVendaDAO.TotalCart() == 0)
                        {
                            <span>
                                Carrinho
                            </span>
                        }
                        else
                        {

                            <span>
                                Qtde Itens @ItemVendaDAO.QtdeItensCart()
                            </span>
                            <br />
                            <span>
                                Valor Total  @ItemVendaDAO.TotalCart().ToString("C2")
                            </span>
                        }


                    </a>
                </li>
            </ul>

        </div>
    </nav>
    <div id="content" class="container" style="margin-top:100px">
        @RenderBody()
    </div>

    <hr style="margin-top:30px" />
    <footer style="text-align:center">
        <p>&copy; @DateTime.Now.Year - Desenvolvido por Alex Sandro Arents</p>
    </footer>
</body>
</html>
