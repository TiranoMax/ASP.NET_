<div>
    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal " }))
    {
        <fieldset>
            <legend>Cadastrar Produto</legend>
            <div class="form-group">
                @Html.Label("Nome do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtNome", null, new { @class = "form-control", @placeholder = "Nome do Produto" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descrição do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtDescricao", null, new { @class = "form-control", @placeholder = "Descrição do Produto" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Preço do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtPreco", null, new { @class = "form-control", @placeholder = "Preço do Produto" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Categoria do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtCategoria", null, new { @class = "form-control", @placeholder = "Categoria do Produto" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Cadastrar" class="btn btn-success"/>
                </div>
            </div>
        </fieldset>

    }





</div>





