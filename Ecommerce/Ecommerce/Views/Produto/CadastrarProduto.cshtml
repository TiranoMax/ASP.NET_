@model Ecommerce.Models.Produto

<div>
    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal " }))
    {
        <fieldset>
            <legend>Cadastrar Produto</legend>
            @Html.ValidationSummary(true, null, new { @class = "text-denger" })

            <div class="form-group">
                @Html.LabelFor(Model => Model.Nome, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(Model => Model.Nome, new { @class = "form-control", @placeholder = "Nome do Produto" })
                    @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Descricao, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(Model => Model.Descricao, new { @class = "form-control", @placeholder = "Descrição do Produto" })
                    @Html.ValidationMessageFor(model => model.Descricao, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Preco, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(Model => Model.Preco, new { @class = "form-control", @placeholder = "Preço do Produto" })
                    @Html.ValidationMessageFor(model => model.Preco, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(Model => Model.Categoria, new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(Model => Model.Categoria, new { @class = "form-control", @placeholder = "Categoria do Produto" })
                    @Html.ValidationMessageFor(model => model.Categoria, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                </div>
            </div>
        </fieldset>

    }





</div>





