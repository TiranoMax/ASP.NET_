@using Ecommerce.Models
@{
    Produto produto = ViewBag.Produto;

}
<div>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Cadastrar Produto</legend>
            @Html.Hidden("txtId", produto.ProdutoId);
            <div class="form-group">
                @Html.Label("Nome do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtNome", produto.Nome, new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Descrição do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtDescricao", produto.Descricao, new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Preço do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtPreco", produto.Preco, new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">

                @Html.Label("Categoria do produto", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("txtCategoria", produto.Categoria, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-success"value="Salvar" />
                    </div>
                </div>
        </fieldset>
    }
</div>
