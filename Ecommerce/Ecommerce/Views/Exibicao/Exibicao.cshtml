@using Ecommerce.Models
@model List<Produto>


<div class="container-fluid" >
    <div class="row">
        @foreach (Produto Exib in Model)
        {

            <div class="col-lg-4 ">
                <div style="text-align:center">
                    <img src="~/Images/@Exib.Imagem" alt="Imagem do Produto" style="width:150px; height:150px" /><br />
                    <label>@Html.ActionLink(Exib.Nome, "Descricao", "Exibicao", new { id = Exib.ProdutoId }, new { @class = "text-info" })</label><br />
                    <label>R$: @Exib.Preco</label><br />
                </div>
            </div>
            <div class="col-lg-2">

            </div>
        }
    </div>
</div>


